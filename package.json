{
  "name": "ipc-flux",
  "version": "0.3.6",
  "author": "Harry Park <harry@harrypark.io>",
  "description": "Flux like state & action management across electron processes (ipc).",
  "license": "MIT",
  "repository": "https://github.com/harryparkdotio/ipc-flux.git",
  "main": "build/index.js",
  "scripts": {
    "build": "./node_modules/babel-cli/bin/babel.js --presets=es2015,stage-0 src/ --out-dir build/ --source-maps",
    "pretest": "npm run build",
    "pretest:main": "npm run build --silent",
    "pretest:renderer": "npm run build --silent",
    "test:main": "./node_modules/electron-mocha/bin/electron-mocha --require test/index.js --require-main test/main.js --preload test/renderer.js test/specs/main.spec.js",
    "test:renderer": "./node_modules/electron-mocha/bin/electron-mocha --require test/index.js --require-main test/main.js --renderer test/specs/renderer.spec.js",
    "test": "npm run test:main --silent && npm run test:renderer --silent"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "electron-mocha": "^4.0.0",
    "pre-push": "^0.1.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "pre-push": [
    "build"
  ],
  "dependencies": {
    "electron": "^1.6.11"
  }
}
